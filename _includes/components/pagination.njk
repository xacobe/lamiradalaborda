{# Pagination #}
{% if pagination.href.next or pagination.href.previous %}
    <nav aria-labelledby="paginador" class="position-relative d-flex justify-content-center">
      <h2 id="my-pagination" class="visually-hidden">Paginaci√≥n</h2>
      <ol class="pagination">
        {% if pagination.href.previous %}
          <li class="page-item mx-1">
            <a class="page-link bg-white text-red border-0 mx-0" href="{{ pagination.href.previous }}">
              <i class="bi bi-caret-left-fill"></i>
            </a>
          </li>
            {% endif %}
          {%- for pageEntry in pagination.pages %}
            <li class="page-item mx-1">
              <a class="page-link" href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ loop.index }}</a>
            </li>
          {%- endfor %}
            {% if pagination.href.next %}
          <li class="page-item mx-1">
              <a class="page-link bg-white text-red border-0 mx-0" href="{{ pagination.href.next }}">
                <i class="bi bi-caret-right-fill"></i>
              </a>
          </li>
        {% endif %}
      </ol>
    </nav>
{% endif %}
